<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_200">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_15">

            <TextView
                android:id="@+id/tv_add_adres_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receiver_name_req"
                android:textSize="18sp"
                android:textColor="@color/color_grey_800"/>

            <EditText
                android:id="@+id/et_add_adres_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:layout_marginBottom="@dimen/space_5"
                android:padding="@dimen/space_8"
                android:background="@drawable/curv_edt_textbox_bg"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/tv_add_adres_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receiver_mobile_number"
                android:textSize="18sp"
                android:textColor="@color/color_grey_800"
                />

            <EditText
                android:id="@+id/et_add_adres_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:layout_marginBottom="@dimen/space_5"
                android:padding="@dimen/space_8"
                android:background="@drawable/curv_edt_textbox_bg"
                android:ems="10"
                android:inputType="number"
                android:maxLength="15" />

            <TextView
                android:id="@+id/tv_add_adres_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zip_code"
                android:textSize="18sp"
                android:textColor="@color/color_grey_800"/>

            <EditText
                android:id="@+id/et_add_adres_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="10XXX"
                android:layout_marginTop="@dimen/space_5"
                android:layout_marginBottom="@dimen/space_5"
                android:padding="@dimen/space_8"
                android:background="@drawable/curv_edt_textbox_bg"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/tv_add_adres_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/full_address"
                android:textSize="18sp"
                android:textColor="@color/color_grey_800"/>

            <EditText
                android:id="@+id/et_add_adres_home"
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:layout_marginTop="@dimen/space_5"
                android:layout_marginBottom="@dimen/space_5"
                android:padding="@dimen/space_8"
                android:gravity="left|top"
                android:background="@color/whiteColor"
                android:inputType="text" />

            <Button
                android:id="@+id/btn_add_adres_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:text="Add delivery address"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
</LinearLayout>